<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">


            <Label
                Text="Введіть ціле число"
                SemanticProperties.HeadingLevel="Level1"
                SemanticProperties.Description="Введіть ціле число"
                FontSize="21"
                HorizontalOptions="Center" />

            <Entry
                x:Name="numberEntry"
                Placeholder="Введіть ціле число"
                HorizontalOptions="Center" />

            <Button
                x:Name="ShowMessageBtn"
                Text="Показати введене число"
                SemanticProperties.Hint="Displays a message with the entered number"
                Clicked="OnShowMessageClicked"
                HorizontalOptions="Center"
                BackgroundColor="Pink" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>